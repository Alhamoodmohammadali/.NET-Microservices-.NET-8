@model IEnumerable<MajorDto>
<form>
    <div class="container row">
        @foreach (var Major in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-white-50 text-center py-2">@Major.Name</h3>
                        <img src="@Major.ImageUrl" class="card-img-top">
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px;">@Major.CountHours Hour</span>
                                <span class="text" style="font-size:20px;">@Major.ShortCut </span>
                                @* <span class="badge bg-warning text-white p-2">@product.CategoryName</span> *@
                            </div>
                            <p class="card-text">@Html.Raw(Major.Description)</p>
                            <div class="row">
                                <div class="col">
                                    <a asp-action="MaterialIndex" asp-route-id="@Major.MajorId"
                                       class="btn btn-success form-control">@Major.ArbicName</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
