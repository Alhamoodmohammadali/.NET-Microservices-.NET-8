@model IEnumerable<MaterialDto>
<form>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var Material in Model)
            {
                <div class="col">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@Material.ImageUrl" class="img-fluid rounded-start" alt="@Material.Name">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@Material.Name</h5>
                                    <p class="card-text">@Html.Raw(Material.Description)</p>
                                    <p class="card-text">
                                        <small class="text-muted">@string.Format("{0} hours", Material.CountHours)</small>
                                    </p>
                                    <a asp-action="ChapterIndex" asp-route-id="@Material.MaterialId"
                                       class="btn btn-success">Chapter</a>
                                    <a asp-action="SummaryIndex" asp-route-id="@Material.MaterialId"
                                       class="btn btn-success">Summary</a>
                                    <a asp-action="LectureIndex" asp-route-id="@Material.MaterialId"
                                       class="btn btn-success">Lecture</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>
