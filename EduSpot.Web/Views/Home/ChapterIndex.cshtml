@model IEnumerable<ChapterDto>
<form>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var Chapter in Model)
            {
                <div class="col">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@Chapter.Name</h5>
                                    <p class="card-text">@Html.Raw(Chapter.Description)</p>
                                    <a href="@Chapter.PdfUrl" class="btn btn-primary">Download PDF</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>
