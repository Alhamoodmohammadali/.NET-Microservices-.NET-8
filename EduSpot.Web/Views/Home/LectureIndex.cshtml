@model IEnumerable<LectureDto>
<form>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var Lecture in Model)
            {
                <div class="col">
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@Lecture.Name</h5>
                                    <p class="card-text">@Html.Raw(Lecture.Description)</p>
                                    <a href="@Lecture.VideoUrl" class="btn btn-primary">Play Video</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</form>
