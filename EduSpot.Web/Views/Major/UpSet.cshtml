@model VMUniversityMajor
<form asp-action="UpSet" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">@((Model.majorDto.MajorId == 0 || Model.majorDto.MajorId == null) ? "Create" : "Edit") Major</h1>
        <input asp-for="majorDto.MajorId" hidden />
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;"> Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="majorDto.Name" class="form-control" required min="5" maxlength="50" />
                        <span asp-validation-for="majorDto.Name" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Arbic Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="majorDto.ArbicName" class="form-control" required min="5" maxlength="50" />
                        <span asp-validation-for="majorDto.ArbicName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Description</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="majorDto.Description" class="form-control" rows="5" required min="5" maxlength="250"></textarea>
                        <span asp-validation-for="majorDto.Description" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Count Hours</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="majorDto.CountHours" class="form-control" required  />
                        <span asp-validation-for="majorDto.CountHours" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Short Cut</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="majorDto.ShortCut" class="form-control" required min="2" maxlength="10" />
                        <span asp-validation-for="majorDto.ShortCut" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="@Model.majorDto.UniversityId" asp-items="@Model.UniversityList" class="form-select border-0 shadow">
                            <option disabled selected>--Select University--</option>
                        </select>
                        <label asp-for="majorDto.UniversityId" class="ms-2"></label>
                        <span asp-validation-for="majorDto.UniversityId" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Image</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="majorDto.Image" class="form-control" accept="image/*" />
                        <input asp-for="majorDto.ImageUrl" hidden class="form-control" />
                        @if (!(Model.majorDto.MajorId == 0 || Model.majorDto.MajorId == null))
                        {
                            <input asp-for="majorDto.ImageLocalPath" hidden class="form-control" />
                        }
                        <span asp-validation-for="majorDto.Image" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Pdf File</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="majorDto.Pdf" class="form-control" accept="application/pdf" />
                        <input asp-for="majorDto.PdfUrl" hidden class="form-control" />
                        @if (!(Model.majorDto.MajorId == 0 || Model.majorDto.MajorId == null))
                        {
                            <input asp-for="majorDto.PdfLocalPath" hidden class="form-control" />
                        }
                        <span asp-validation-for="majorDto.Pdf" class="text-danger"></span>
                    </div>
                    <div class="col-5 offset-2">
                        <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        @if (Model.majorDto.MajorId == 0 || Model.majorDto.MajorId == null)
                        {
                            <input type="submit" value="Create" class="btn btn-danger form-control" />
                        }
                        else
                        {
                            <input type="submit" value="Edit" class="btn btn-danger form-control" />
                        }
                    </div>
                </div>
            </div>
            <div class="col-2">
                @if (Model.majorDto.MajorId != 0)
                {
                    <img src="@Model.majorDto.ImageUrl" class="w-100" alt="" />
                }
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}