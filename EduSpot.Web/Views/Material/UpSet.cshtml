@model VMMajorMaterial
<form asp-action="UpSet" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">@((Model.material.MaterialId == 0 || Model.material.MaterialId == null) ? "Create" : "Edit") Material</h1>
        <input asp-for="material.MaterialId" hidden />
        <hr />
        <div class="row">
            <div class="col-10">

                <div class="row">
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;"> Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="material.Name" class="form-control" />
                        <span asp-validation-for="material.Name" class="text-danger"></span>
                    </div>

                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Arbic Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="material.ArbicName" class="form-control" />
                        <span asp-validation-for="material.ArbicName" class="text-danger"></span>
                    </div> 

                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Description</label>
                    </div>
                    <div class="col-10 pb-3">
                        <textarea asp-for="material.Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="material.Description" class="text-danger"></span>
                    </div> 


                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Count Hours</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="material.CountHours" class="form-control" />
                        <span asp-validation-for="material.CountHours" class="text-danger"></span>
                    </div>
                

                  
                    <div class="form-floating py-2 col-12">
                        <select asp-for="@Model.material.MajorId" asp-items="@Model.MajorList" class="form-select border-0 shadow">
                            <option disabled selected>--Select University--</option>
                        </select>
                        <label asp-for="material.MajorId" class="ms-2"></label>
                        <span asp-validation-for="material.MajorId" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Image</label>
                    </div>


                    <div class="col-10 pb-3">
                        <input asp-for="material.Image" class="form-control" />
                        <input asp-for="material.ImageUrl" hidden class="form-control" />
                        @if (!(Model.material.MajorId == 0 || Model.material.MajorId == null))
                        {
                            <input asp-for="material.ImageLocalPath" hidden class="form-control" />
                        }
                        <span asp-validation-for="material.Image" class="text-danger"></span>
                    </div>


                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Pdf File</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="material.Pdf" class="form-control" />
                        <input asp-for="material.PdfUrl" hidden class="form-control" />
                        @if (!(Model.material.MaterialId == 0 || Model.material.MaterialId == null))
                        {
                            <input asp-for="material.PdfLocalPath" hidden class="form-control" />
                        }
                        <span asp-validation-for="material.Pdf" class="text-danger"></span>
                    </div>


                    <div class="col-5 offset-2">
                        <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
                    </div>
                    <div class="col-5">
                        @if (Model.material.MaterialId == 0 || Model.material.MaterialId == null)
                        {
                            <input type="submit" value="Create" class="btn btn-danger form-control" />
                        }
                        else
                        {
                            <input type="submit" value="Edit" class="btn btn-danger form-control" />
                        }
                    </div>
                </div>
            </div>
            <div class="col-2">
                @if (Model.material.MaterialId != 0)
                {
                    <img src="@Model.material.ImageUrl" class="w-100" alt="" />
                }
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}